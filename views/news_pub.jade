	var socket = io.connect();
	socket.on('delitem', function (data) {
		$('.news_items li').each( function() {
			var i=$(this).attr('rel');
			if(data.indexOf( i ) != -1) {
				$(this).remove();
			}
		});
	});
	function get_keys( hash, reverse) {
		var keys=[];
		// collect the keys from hash
		$.each( hash, function(k, v) {
			keys.push(k);
		} );
		keys.sort();
		if(arguments.length>1 && reverse) {
			keys.reverse();
		}
		return keys;
	}
	function gen_ts( ms ) {
		var d=new Date(parseInt(ms));
		return $.format.date(d, 'HH:mm MMM dd, yyyy');
	}
